{
  "manifest_version": 2,
  "name": "Open2ch NG Word",
  "version": "0.0.1",
  "description": "Open2ch にNG Word を追加します",

  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },

  "permissions": [
    "storage"
  ],

  "content_scripts": [
    {
      "matches": ["http://open.open2ch.net/*"],
      "js": [
        "src/index.js"
      ]
    }
  ]
}
